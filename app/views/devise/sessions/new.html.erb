<div class="navbar">
  <div class="nom-logo">
    <img src="https://res.cloudinary.com/dsp76osnf/image/upload/v1666616208/logo-triangle_wkbdhf.png" alt="logo">
  </div>

  <div class="buttons-navbar">
    <div class="bg-btn-nav <%= "prod" if request.path == "/"%>">
      <%= link_to root_path do %>
        <p>Home</p>
      <% end %>
    </div>
    <div class="bg-btn-nav <%= "prod" if request.path == "/public-walks"%>">
      <%= link_to root_path do %>
        <p>Les balades</p>
      <% end %>
    </div>
    <% if current_user %>
    <div class="bg-btn-nav <%= "prod" if request.path == "/walks"%>">
      <%= link_to walks_path do %>
        <p>Mes balades</p>
      <% end %>
    </div>
    <% else %>
    <div class="bg-btn-nav <%= "prod" if request.path == "/users/sign_in"%>">
      <%= link_to new_user_session_path do %>
        <p>Connexion</p>
      <% end %>
    </div>
    <% end %>
    <div class="bg-btn-nav <%= "prod" if request.path == "/contact"%>">
      <%= link_to root_path do %>
        <p class="<%= "prod" if request.path == "/contact" %>">Contact</p>
      <% end %>
    </div>
  </div>
</div>

<div class="sign-in-form">
  <h2>Connectez vous</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>
    <div class="form-inputs">
      <p>email</p>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, label: false %>
      <p>Mot de passe</p>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, label: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Connexion" %>
    </div>
  <% end %>

    <%= link_to "Vous n'avez pas de compte ? Inscrivezvous !", new_user_registration_path, class: "connec"%>

</div>

