<div class="sign-up-form">
  <h2>Créer un compte</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>

    <div class="form-inputs">
      <p>Prénom</p>
      <%= f.input :first_name, label: false %>
      <p>Nom de famille</p>
      <%= f.input :last_name, label: false %>
      <p>Adresse</p>
      <%= f.input :address, label: false %>
      <p>Photo de profil</p>
      <%= f.input :photo, as: :file, label: false %>
      <p>email</p>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocompxlete: "email" }, label: false%>
      <p>Mot de passe</p>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password" }, label: false, placeholder: "Minimum 6 caractères" %>
      <p>Confirmation du mot de passe</p>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" }, label: false, placeholder: "Minimum 6 caractères" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Inscription" %>
    </div>
  <% end %>

  <%= link_to "Vous avez déjà un compte ? Connectez vous !", new_user_session_path, class: "connec"%>
</div>

