<div class="navbar">
  <div class="home-link">
    <%= link_to root_path do %>
      <img src="https://res.cloudinary.com/dsp76osnf/image/upload/v1664291400/logo-brown_kvupnw.png" alt="logo">
    <% end %>
  </div>

  <div class="buttons-navbar">
    <% if current_user %>
      <%= current_user.first_name %>
      <% if current_user.photo.present? %>
        <p> avatar<%= cl_image_tag current_user.photo.key %></p>
      <% else %>
        <img src="https://res.cloudinary.com/dsp76osnf/image/upload/v1663317287/35a1e6d69cf6924b6076d864a5d39e95_d9slf9.jpg">
      <% end %>
      <%= link_to "Mes balades", walks_path %>
      <%= link_to "Déconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
    <% else %>
      <%= link_to "Connexion", new_user_session_path %>
      <%= link_to "Inscription", new_user_registration_path %>
    <% end %>
  </div>
</div>

<div class="banner">
  <h1>Trace ta balade</h1>
</div>


<div class="sign-up-form">
  <h2>Créer un compte</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>

    <div class="form-inputs">
      <p>Prénom</p>
      <%= f.input :first_name, label: false %>
      <p>Nom de famille</p>
      <%= f.input :last_name, label: false %>
      <p>Adresse</p>
      <%= f.input :address, label: false %>
      <p>Photo de profil</p>
      <%= f.input :photo, as: :file, label: false %>
      <p>email</p>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, label: false%>
      <p>Mot de passe</p>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password" }, label: false, placeholder: "Minimum 6 caractères" %>
      <p>Confirmation du mot de passe</p>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" }, label: false, placeholder: "Minimum 6 caractères" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Inscription" %>
    </div>
  <% end %>

  <%= link_to "Connexion", new_user_session_path, class: "connec"%>
</div>
