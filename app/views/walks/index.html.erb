<p>Bienvenue sur votre page <%= current_user.first_name %></p>
<%= link_to "nouvelle balade", new_walk_path %>



<% unless @walks == nil %>
  <% @walks.each do |w| %>
    <%= w.title %>
    <%= w.date %>
    <%= w.address %>
    <% case %>
    <% when w.photos.present? %>
      <%  w.photos.each do |p| %>
        <%= cl_image_tag p.key, height: 50, width: 50, crop: :fill %>
      <% end %>
    <% when w.num_km.present?  %>
      <%= w.num_km %>
    <% when w.duration.present? %>
      <%= w.duration %>
    <% when w.ratting.present? %>
      <%= w.ratting %>
    <% when w.content.present? %>
      <%= w.content %>
    <% end %>
    <%= link_to "Voir la balade", walk_path(w) %>
    <%= link_to "Delete", walk_path(w), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
<% end %>
